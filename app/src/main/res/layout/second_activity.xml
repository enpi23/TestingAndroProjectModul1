<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    tools:context="enpi23.prakandro.modul1victor120210500.SecondActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="123dp">

        <TextView
            android:id="@+id/txtsubdinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtdinner"
            android:layout_centerHorizontal="true"
            android:text="@string/makan_malam"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="131dp"
            tools:layout_editor_absoluteY="37dp" />

        <TextView
            android:id="@+id/txtdinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="34dp"
            android:text="@string/dengan_milea" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/menumakantxt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="Menu" />

            <TextView
                android:id="@+id/txtmenu"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/menumakantxt"
                android:gravity="center"
                android:text="Makanan" />

            <TextView
                android:id="@+id/porsimenutxt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txtporsi"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:text="Porsi" />

            <TextView
                android:id="@+id/txtporsi"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/hargamenutxt"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="37dp"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/hargamenutxt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txtharga"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:text="Harga" />

            <TextView
                android:id="@+id/txtharga"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="IDR 0" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>